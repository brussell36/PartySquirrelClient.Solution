@{
  Layout = "_Layout";
}

@using PartySquirrel.Models
@model List<PartySquirrel.Models.SquirrelUser>

<h1>@ViewBag.FirstName's Party</h1> 

@if (Model.Count == 0)
{
  <p>@ViewBag.FirstName hasn't added any party squirrels to their party!</p>
}

@foreach(SquirrelUser squirrel in Model)
{
  <img src=@squirrel.Squirrel.Image>
  <h3>@Html.ActionLink($"{squirrel.Squirrel.Name}", "Details", "Squirrels", new { id = squirrel.Squirrel.SquirrelId })</h3>
}

